<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    !-- Styling for Login TextInputLayout border -->
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_gray</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="hintTextAppearance">@style/LoginHintTextStyle</item>
    </style>

    <!-- Styling for hint text color -->
    <style name="LoginHintTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <!-- Styling for Login TextInputEditText border -->
    <style name="LoginTextInputEditTextLayoutStyle">
        <item name="android:padding">20dp</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/dark_gray</item>
    </style>

    <!-- Styling for login Button -->
    <style name="LoginButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/rounded_shape_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteStatusBarStyle" parent="AppTheme">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="EditItemInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_gray</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextAppearance">@style/EditItemHintTextStyle</item>
    </style>

    <style name="EditItemHintTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>